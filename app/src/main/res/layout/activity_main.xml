<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ee.ut.cs.mc.ec2.MainActivity" >

    <TextView
        android:id="@+id/textview_console"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/console_default" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_start_instance"
        android:id="@+id/btn_start_instance"
        android:layout_marginTop="105dp"
        android:layout_below="@+id/textview_console"
        android:onClick="startInstance"
        android:layout_alignStart="@+id/btn_terminate_instance"
        android:layout_alignEnd="@+id/btn_terminate_instance" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_terminate_instance"
        android:id="@+id/btn_terminate_instance"
        android:layout_below="@+id/btn_start_instance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:onClick="terminateInstance"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_do_scop"
        android:id="@+id/btn_doSCP"
        android:layout_below="@+id/btn_terminate_instance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:onClick="doSCP"
        />

</RelativeLayout>
