<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="ee.ut.cs.mc.ec2.MainActivity"
    android:id="@+id/relativeLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_start_instance"
        android:id="@+id/btn_start_instance"
        android:onClick="startInstance"
        android:layout_below="@+id/scrollView"
        android:layout_marginTop="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_terminate_instance"
        android:id="@+id/btn_terminate_instance"
        android:onClick="terminateInstance"
        android:layout_below="@+id/btn_start_instance"
        android:layout_centerHorizontal="true"
        android:background="#ffdd6573"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_do_scop"
        android:id="@+id/btn_doSCP"
        android:onClick="doSCP"
        android:layout_below="@+id/btn_terminate_instance"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/console_height"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/textview_console"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/console_default" />
    </ScrollView>

</RelativeLayout>
